{
	"name": "dhugs-com",
	"version": "3.0.0",
	"private": true,
	"scripts": {
		"dev": "next dev --turbopack",
		"build": "next build",
		"build:open": "npm run content:precompile && opennextjs-cloudflare build",
		"build:dev": "npm run content:all && npm run fs:tree && opennextjs-cloudflare build",
		"start": "next start",
		"lint": "next lint",
		"test": "vitest run",
		"preview": "npm run build:open && opennextjs-cloudflare preview",
		"deploy": "npm run build:open && opennextjs-cloudflare deploy",
		"upload": "npm run build:open && opennextjs-cloudflare upload",
		"preview:dev": "npm run build:dev && opennextjs-cloudflare preview -- --env=dev",
		"deploy:dev": "npm run build:dev && opennextjs-cloudflare deploy -- --env=dev",
		"upload:dev": "npm run build:dev && opennextjs-cloudflare upload -- --env=dev",
		"cf-typegen": "wrangler types --env-interface CloudflareEnv ./env.d.ts",
		"upgrade": "npx npm-check-updates -u && npm install",
		"content:precompile": "tsx scripts/precompile-posts.ts",
		"content:redirects": "tsx scripts/generate-redirects.ts",
		"content:sitemap": "tsx scripts/generate-sitemap.ts",
		"content:images": "tsx scripts/generate-image-versions.ts",
		"content:metadata": "tsx scripts/update-image-metadata.ts",
		"content:all": "npm run content:precompile && npm run content:redirects && npm run content:sitemap",
		"fs:tree": "bash -c 'pattern=\"$(( sed \"/^\\s*#/d;/^$/d\" .gitignore; echo .next; echo node_modules ) | tr \"\\n\" \"|\" | sed \"s/|$//\")\"; tree -I \"$pattern\" > file-structure.txt'",
		"browse": "tsx scripts/selenium-browse.ts"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.873.0",
		"@opennextjs/cloudflare": "^1.6.5",
		"date-fns-tz": "^3.2.0",
		"dotenv": "^17.2.1",
		"gray-matter": "^4.0.3",
		"next": "15.5.1",
		"next-themes": "^0.4.6",
		"react": "^19.1.1",
		"react-photo-album": "^3.1.0",
		"rehype-sanitize": "^6.0.0",
		"rehype-stringify": "^10.0.1",
		"remark": "^15.0.1",
		"remark-gfm": "^4.0.1",
		"remark-html": "^16.0.1",
		"remark-rehype": "^11.1.2",
		"sitemap": "^8.0.0",
		"yet-another-react-lightbox": "^3.25.0"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3",
		"@tailwindcss/postcss": "^4",
		"@tailwindcss/typography": "^0.5.16",
		"@types/node": "^24.3.0",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"@types/selenium-webdriver": "^4.1.28",
		"eslint": "^9",
		"eslint-config-next": "15.5.1",
		"npm-check-updates": "^18.0.3",
		"selenium-webdriver": "^4.35.0",
		"sharp": "^0.34.3",
		"tailwindcss": "^4",
		"tsx": "^4.20.5",
		"typescript": "^5",
		"vitest": "^3.2.4",
		"wrangler": "^4.33.0"
	}
}
